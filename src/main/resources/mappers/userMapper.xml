<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.MemoNote.user.repository.UserRepository">
 	<insert id="insertUser" parameterType="map">
 	INSERT INTO
			`user`
		(
			  `loginId`
			, `password`
			, `name`
			, `phoneNumber`
		)
		VALUE 
		(
			#{loginId}
			, #{password}
			, #{name}
			, #{phoneNumber}
			
		)
 	</insert>
 	
 	<select id="seletUser" parameterType="map"
 	resultType="com.MemoNote.user.domain.User">
 		SELECT
 		 `id`
 		,`loginId`
 		,`password`
 		,`name`
 		,`phoneNumber`
 		,`createdAt`
 		,`updatedAt`
 		
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 		AND
 			`password` = #{password}	
 		

 	</select>
 
 
 
 </mapper>